<h1>Tweets</h1>

<%= form_tag(search_path, :method => "get") do %>
  <%= label_tag(:q, "Buscar e salvar tweets com") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Buscar") %>
<% end %>

<% @tweets.each do |tweet| %>
    <div class=tweets>
      <p><%= tweet.texto %></p>
      <span><%= tweet.autor %></span>
    </div>
<% end %>

